                    <span>üö®</span> Y√™u c·∫ßu c·ª©u h·ªô
                </a>
                <a href="@Url.Action("Users", "Admin")" class="@(ViewContext.RouteData.Values["action"]?.ToString()?.Contains("User") == true ? "active" : "")">
                    <span>üë•</span> Qu·∫£n l√Ω ng∆∞·ªùi d√πng
                </a>
            </nav>
        </aside>

        <!-- Main Content -->
        <div class="admin-content">
            <header class="admin-header">
                <h1>@ViewData["Title"]</h1>
                <div class="user-info">
                    @{
                        var username = Context.Session.GetString("Username") ?? "Admin";
                    }
                    <span>Xin ch√†o, <strong>@username</strong></span>
                    <a href="@Url.Action("Logout", "Auth")" class="btn btn-sm btn-outline-danger ms-2">
